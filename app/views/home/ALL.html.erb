<% if user_signed_in?%>

<h1>All Tours </h1> 


<table class="table table-striped table-hover">
   <thead class="table-dark">
    <tr>
      
      <th>Autista</th>
      <th>Mezzo di trasporto</th>
      <th>Data</th>
      <th>Partenza</th>
      <th>Destinazione</th>
      <th>Durata</th>
      <th>Posti disponibili</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
    <% Tour.all.each do |tour| %>
      <tr>
        <td><%= tour.Autista %></td>
        <td><%= tour.Mezzo_Di_Trasporto %></td>
        <td><%= tour.Data %></td>
        <td><%= tour.Partenza %></td>
        <td><%= tour.destinazione %></td>
        <td><%= tour.durata %></td>
        <td><%= tour.Posti_Disponibili %></td>
        
        <td><%= link_to 'Mostra Tour', tour,class:'btn btn-outline-primary btn-sm' %></td>
       
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<main class="ui one column doubling stackable grid container">    
            
<section >
                <% Tour.all.each do |tour| %>
                    <div class="ui vertical segment">
                        <h3 class="ui header">
                            <%= link_to  tour.Partenza, tour_path(tour) %>
                            <%= link_to  tour.destinazione, tour_path(tour) %>
                             
                        </h3>
                        <h5 class="ui header">
                            <%= tour.Autista %>
                        </h5>
                        <p class="ui segment">
                            <%= tour.Data %>  
                        </p>
                        <button class="ui tiny button">
                            <%= link_to  "Show Tour", tour %>
                        </button>
                        
                    </div>
                <% end %>
                        
                        
  </section>
  </main>

<% else %>

<h1>Ciao</h1>


<%end%>
