
<p id="notice"><%= notice %></p>
<main class="container">


  


<div class="container">
    <div class="main-body">
    
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card h-100">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                  	<div class="account-settings">
                  <div class="card-body">
                  <div class="user-profile">
                  <div class="user-avatar" class= "img-circular">
                    <%=image_tag(@user.avatar_thumbnail) %>
                    </div>
                    <div class="mt-3">
                      <h4><%=@user.username%></h4>
                      <p class="text-secondary mb-1"><%=@user.email%></p>
                      <p class="text-muted font-size-sm"><%=@user.about%></p>
                    </div>
                    </div>
                    </div>
                    <br>
                    <%= button_to "Cancel my account", user_registration_path, data: { confirm: "Are you sure?" }, method: :delete,class:'btn btn-danger' %>
                  
                  </div>
                  </div>
                </div>
              </div>
             <div class="ui basic segment">
            <div class="ui two column doubling stackable grid container">
               
                 
            </div>
        </div>
        
        
                       
              
            </div>
            
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                     <%=@user.name%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Instagram</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%=@user.instagram%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%=@user.phone%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Veichle</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%=@user.vehicle%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">

                  <div class="ui basic segment">
        
            <div class="ui two column doubling stackable grid container">
                            <%if @user.email==current_user.email%>
                             <% @user.pending_invitations.each do |invitation| %>
                            <span class="column">
                            <div class="ui attached segment">
                                  <%= User.find(invitation.user_id).email %>
                                  <%= link_to 'Accept Invitation',
                                  invitations_update_path(invitation_id: invitation.id), data: {confirm: "Sei sicuro di voler accettare questo invito?"} %>
                                  <%= link_to 'Reject Invitation',
                                  invitations_destroy_path(invitation_id: invitation.id, data: {confirm: "Sei sicuro di voler eliminare questo invito?"}) %>
                                
                              <% end %>
                              </div>
                              </span>
                            <%end%>   
                        </div>
            

            
                  
                  </div>
                  <hr>
                  <div class="row">
                  <%= link_to "Edit Profile", edit_user_registration_path,class:"btn btn-outline-primary"%>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
    </div>
    
  </div>
                    
    </section>
    
        


 
</main>